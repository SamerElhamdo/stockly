{
  "expo": {
    "name": "Stockly Mobile",
    "slug": "stockly-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "يحتاج التطبيق إلى الوصول للكاميرا لمسح الباركود والكيو آر كود"
      },
      "bundleIdentifier": "com.samerelhamdott.stocklymobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "supportsRtl": true,
      "statusBar": {
        "backgroundColor": "#0F172A",
        "translucent": false
      },
      "package": "com.samerelhamdott.stocklymobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "يحتاج التطبيق إلى الوصول للكاميرا لمسح الباركود والكيو آر كود"
        }
      ]
    ]
  }
}
